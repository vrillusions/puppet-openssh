source "https://rubygems.org"

# Notice this will install the puppet gem which may not play well with a system
# installed puppet. Make sure you have rvm setup before doing a bundle install.

gem 'rake'
gem 'rspec-puppet'
#gem 'rspec-system-puppet'
gem 'puppetlabs_spec_helper'
gem 'puppet-lint'
gem 'puppet-syntax'
gem 'puppet', ENV['PUPPET_VERSION'] || '~> 3.3.0'
